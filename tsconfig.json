{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "es2016",
		"module": "commonjs",
		"baseUrl": "./src",
		"paths": {
			"@utils/*": ["utils/*"],
			"@models/*": ["models/*"],
			"@controllers/*": ["controllers/*"],
			"@routes/*": ["routes/*"],
			"@middlewares/*": ["middlewares/*"]
		},
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true
	}
}
